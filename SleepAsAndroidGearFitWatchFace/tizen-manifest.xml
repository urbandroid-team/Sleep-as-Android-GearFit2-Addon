<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<manifest xmlns="http://tizen.org/ns/packages" api-version="2.3.1" package="com.urbandroid.sleep.gearfit" version="1.0.0">
    <profile name="wearable"/>
    <watch-application ambient-support="false" appid="com.urbandroid.sleep.gearfit.watchface" exec="sleepasandroidgearfitwatchface">
        <label>Sleep as Android</label>
        <icon>launcher.png</icon>
        <metadata key="master_app_name" value="Sleep As Android - Gear Add-on"/>
